<% provide(:title, 'All Articles') %>
<div class = "row">
	<aside class = "span9 offset3">
		<h1>All Articles</h1>

		<%= will_paginate %>
		<div class = "row">
		<ul class="users">
			<%= render @articles %>
		</ul>
		</div>
		<%= will_paginate %>


		<div class = "row">
		<%= form_tag articles_path, :method => :get do %>
		  <p>
		    <%= text_field_tag :search, params[:search] %>
		    <%= submit_tag "Search", :name => nil %>
		  </p>
		<% end %>
		</div>
	</aside>
</div>


