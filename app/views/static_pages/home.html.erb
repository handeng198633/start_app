<% provide(:title, 'Home') %>
<% if signed_in? %>
	<div class="row">
		<aside class="span7">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/article_form' %>
			</section>
		</aside>
		<div class="span5">
			<h3>Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
		<%= link_to image_tag("zen_logo.png", alt: "Apache", size: "400"), "https://www.apache-da.com/" %>
		<h2>
			Web tools for QA team
		</h2>
		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>