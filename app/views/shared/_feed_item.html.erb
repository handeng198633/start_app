<li id="<%= feed_item.id %>">
	<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	<span class="content"><%= link_to feed_item.title, feed_item %></span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
	</span>
	<% if current_user?(feed_item.user) %>
	    <%= link_to "edit", edit_article_path(feed_item.id), title: feed_item.title %>
		<%= link_to "delete", feed_item, method: :delete, data: { confirm: "Sure?" }, title: feed_item.title %>
	<% end %>
</li>